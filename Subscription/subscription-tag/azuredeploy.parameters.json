{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "value": "subscription-tag-policy"
        },
        "displayName": {
            "value": "Audit Subscription tag"
        },
        "description": {
            "value": "This policy is used to audit and ensure subscription uses standardized tag"
        },
        "allowedEnvironmentTagValue": {
            "value": [
                "Production",
                "Development",
                "Test",
                "Staging"
            ]
        },
        "allowedSubscriptionCode": {
            "value": [
                "AzSecA",
                "AzSecB"
            ]
        }
    }
}